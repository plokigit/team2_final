<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="guestbook">
	<select id="login" resultType="com.ict.db.BVO">
		select * from bbs_t where writer=#{writer} and pwd=#{pwd}
	</select>
	
	<insert id="join" parameterType="com.ict.db.BVO">
		insert into bbs_t values(bbs_t_seq.nextval,#{subject},#{writer},null,null,#{pwd},sysdate,#{hit})
	</insert>

	<!-- <select id="list" resultType="com.ict.db.BVO">
		select * from bbs_t order by b_idx desc
	</select> -->
	
	<select id="count" resultType="int">
		select count(*) from bbs_t
	</select>
	
	<select id="list" resultType="com.ict.db.BVO" parameterType="Map">
		select * from 
			(select rownum rn, a.* from 
				(select * from bbs_t order by b_idx desc) a) 
					where rn between #{begin} and #{end}
	</select>
	
	<select id="detail" parameterType="String" resultType="com.ict.db.BVO">
		select * from bbs_t where b_idx=#{b_idx}
	</select>
	<insert id="write" parameterType="com.ict.db.BVO">
		insert into bbs_t values(bbs_t_seq.nextval,#{subject},#{writer},#{content},#{file_name},#{pwd},sysdate,#{hit})
	</insert>
	<update id="update" parameterType="com.ict.db.BVO">
		update bbs_t set subject=#{subject}, writer=#{writer}, content=#{content}, file_name=#{file_name} where b_idx=#{b_idx}
	</update>
	<delete id="delete" parameterType="com.ict.db.BVO">
		delete from bbs_t where b_idx=#{b_idx}
	</delete>
	<update id="hitup" parameterType="String">
		update bbs_t set hit=hit+1 where b_idx=#{b_idx}
	</update>
	<select id="c_list" parameterType="String" resultType="com.ict.db.CVO">
		select * from comment_t where b_idx=#{b_idx} order by c_idx asc
	</select>
	<insert id="comment_write" parameterType="com.ict.db.CVO">
		insert into comment_t values(comment_t_seq.nextval,#{writer},#{content},null,sysdate,#{b_idx})
	</insert>
	<delete id="comment_delete" parameterType="String">
		delete from comment_t where c_idx=#{c_idx}
	</delete>
	<delete id="comment_delete_all" parameterType="String">
		delete from comment_t where b_idx=#{b_idx}
	</delete>
</mapper>
